<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="MaterialRippleLayout">
        <attr name="mrl_rippleColor" format="color" localization="suggested" />
        <attr name="mrl_rippleDimension" format="dimension" localization="suggested" />
        <attr name="mrl_rippleOverlay" format="boolean" localization="suggested" />
        <attr name="mrl_rippleAlpha" format="float" localization="suggested" />
        <attr name="mrl_rippleDuration" format="integer" localization="suggested" />
        <attr name="mrl_rippleFadeDuration" format="integer" localization="suggested" />
        <attr name="mrl_rippleHoverDuration" format="integer" localization="suggested" />
        <attr name="mrl_rippleHover" format="boolean" localization="suggested" />
        <attr name="mrl_rippleBackground" format="color" localization="suggested" />
        <attr name="mrl_rippleDelayClick" format="boolean" localization="suggested" />
        <attr name="mrl_ripplePersistent" format="boolean" localization="suggested" />
        <attr name="mrl_rippleInAdapter" format="boolean" localization="suggested" />
        <attr name="mrl_rippleRoundedCorners" format="dimension" localization="suggested" />
        <attr name="mrl_ripple_type" format="enum">
            <enum name="type_round" value="0"/>
            <enum name="type_rect" value="1"/>

        </attr>
        <attr name="mrl_ripple_background_allowed" format="boolean" localization="suggested" />
    </declare-styleable>

    <declare-styleable name="HorizontalProgress">
        <attr name="horizontal_progress" format="integer"/>
        <attr name="radius" format="dimension|reference"/>
        <attr name="bg_color" format="color|reference"/>
        <attr name="progress_color" format="color|reference"/>
    </declare-styleable>

    <declare-styleable name="BatteryProgress">
        <attr name="battery_progress" format="integer"/>
        <attr name="battery_radius" format="dimension|reference"/>
        <attr name="stroke_width" format="dimension|reference"/>
        <attr name="battery_bg_color" format="color|reference"/>
        <attr name="battery_progress_color" format="color|reference"/>
        <attr name="battery_stroke_color" format="color|reference"/>
    </declare-styleable>


    <declare-styleable name="WaveView">
        <attr name="above_wave_color" format="color"/>
        <attr name="blow_wave_color" format="color"/>
        <attr name="progress" format="integer"/>
        <attr name="wave_length" format="enum">
            <enum name="large" value="1"/>
            <enum name="middle" value="2"/>
            <enum name="little" value="3"/>
        </attr>
        <attr name="wave_height" format="enum">
            <enum name="large" value="1"/>
            <enum name="middle" value="2"/>
            <enum name="little" value="3"/>
        </attr>
        <attr name="wave_hz" format="enum">
            <enum name="fast" value="1"/>
            <enum name="normal" value="2"/>
            <enum name="slow" value="3"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="Themes">
        <attr name="waveViewStyle" format="reference"/>
    </declare-styleable>

    <declare-styleable name="RadarView">
        <attr name="circleColor" format="color"/>
        <attr name="RadarBorderWidth" format="dimension"/>
        <attr name="circleBackGroundColor" format="color"/>
        <attr name="layerColor" format="color" />
        <attr name="radarShaderStartColor" format="color"/>
        <attr name="radarShaderEndColor" format="color"/>
        <attr name="radarLineColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="CustomFrameLayout">
        <attr name="start_color" format="color|reference"/>
        <attr name="end_color" format="color|reference"/>
        <attr name="bubble_show" format="boolean"/>
    </declare-styleable>
</resources>