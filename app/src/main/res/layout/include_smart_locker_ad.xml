<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/smart_locker_ad_cl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:visibility="visible">

    <LinearLayout
        android:id="@+id/battery_ad_main_ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/main_ad_bg"
        android:orientation="vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:visibility="invisible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/simple_locker_ad_icon"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="8dp" />

            <com.abclauncher.powerboost.view.NormalTextView
                android:id="@+id/simple_locker_ad_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:fontFamily="sans-serif-light"
                android:gravity="center_vertical"
                android:shadowColor="#66000000"
                android:shadowDx="3"
                android:shadowDy="3"
                android:shadowRadius="6"
                android:singleLine="true"
                android:text="@string/app_name"
                android:textColor="@color/text_color_white"
                android:textSize="16sp" />

            <com.abclauncher.powerboost.view.NormalTextView
                android:id="@+id/simple_locker_ad_action_tv"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/ad_install_btn_bg"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="INSTALL"
                android:textColor="@color/text_color_white"
                android:textSize="14sp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp">

            <ImageView
                android:id="@+id/battery_ad_iv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />

            <com.abclauncher.powerboost.view.NormalTextView
                android:id="@+id/ad_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="#22000000"
                android:gravity="center"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:text="@string/ad_tag_text"
                android:textColor="@android:color/white"
                android:textSize="8sp" />
            <com.abclauncher.powerboost.view.NormalTextView
                android:id="@+id/battery_ad_summary"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignBottom="@id/battery_ad_iv"
                android:background="#22000000"
                android:ellipsize="end"
                android:gravity="center"
                android:lineSpacingExtra="2dip"
                android:lineSpacingMultiplier="1.4"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="1"
                android:singleLine="true"
                android:textColor="@color/ad_summary_color"
                android:textSize="14sp" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
