<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical">

    <include layout="@layout/main_activity_battery_item"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:id="@+id/locker_charge_time_container"
        android:layout_marginTop="8dp">
        <com.abclauncher.powerboost.view.NormalTextView
            android:id="@+id/time_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/smart_locker_charge"
            android:drawablePadding="5dp"
            android:text="@string/charging_time_des"
            android:textColor="@color/text_color_white"
            android:textSize="14sp" />

        <include layout="@layout/locker_charge_time_value_layout"/>
    </LinearLayout>
</LinearLayout>