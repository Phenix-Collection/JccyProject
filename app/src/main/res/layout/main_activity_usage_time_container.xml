<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/usage_time_container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <com.abclauncher.powerboost.view.NormalTextView
        android:id="@+id/time_left_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/usage_time"
        android:textColor="@color/text_color_light_gray"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:textSize="18sp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">
        <com.abclauncher.powerboost.view.LightTextView
            android:id="@+id/left_time_hour_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="27"
            android:textColor="@color/text_color_white"
            android:textSize="42sp"/>
        <com.abclauncher.powerboost.view.LightTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="H"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:textColor="@color/text_color_white"
            android:textSize="18sp"/>
        <com.abclauncher.powerboost.view.LightTextView
            android:id="@+id/left_time_mins_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="47"
            android:textColor="@color/text_color_white"
            android:textSize="42sp"/>
        <com.abclauncher.powerboost.view.LightTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="M"
            android:layout_marginLeft="4dp"
            android:textColor="@color/text_color_white"
            android:textSize="18sp"/>
    </LinearLayout>

</LinearLayout>