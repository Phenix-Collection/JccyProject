<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="125dp"
        >
        <ImageView
            android:layout_width="77dp"
            android:layout_height="77dp"
            android:src="@mipmap/ic_launcher"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="45dp"/>

        <com.abclauncher.powerboost.view.PressedImageView
            android:id="@+id/close_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:padding="5dp"
            android:src="@drawable/rate_us_dialog_close" />
    </FrameLayout>

    <com.abclauncher.powerboost.view.NormalTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="@string/rate_us_like_abc_cooler"
        android:textColor="#333333"
        android:textSize="22sp" />

    <com.abclauncher.powerboost.view.NormalTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="@string/rate_us_des"
        android:textColor="#666666"
        android:textSize="16sp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal">
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/icon_star" />
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/icon_star"
            android:layout_marginLeft="8dp" />
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/icon_star"
            android:layout_marginLeft="8dp" />
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/icon_star"
            android:layout_marginLeft="8dp" />
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/icon_star"
            android:layout_marginLeft="8dp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="20dp">
        <include layout="@layout/cancel_button_layout"/>
        <include layout="@layout/rate_button_layout"/>
    </LinearLayout>

</LinearLayout>